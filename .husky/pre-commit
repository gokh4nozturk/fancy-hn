#!/bin/sh

# Find all staged .ts, .tsx, and .js files
files=$(git diff --cached --name-only --diff-filter=ACMR | grep "\.tsx\?$\|\.js$" || true)
if [ -z "$files" ]; then
    exit 0
fi

# Check these files for console.log
for file in $files; do
    if grep -l "console\.\(log\|info\|debug\)" "$file" > /dev/null 2>&1; then
        echo "Cleaning logs from $file"
        # Create a temporary file
        temp_file=$(mktemp)
        # Remove console.log lines and clean up empty lines
        sed '/console\.\(log\|info\|debug\)/d' "$file" | sed '/^$/N;/^\n$/D' > "$temp_file"
        # Copy the temp file back to the original
        cp "$temp_file" "$file"
        rm "$temp_file"
        # Stage the changes
        git add "$file"
    fi
done

# Always exit successfully
exit 0 